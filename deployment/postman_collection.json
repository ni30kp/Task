          "raw": "{\n  \"transcript\": \"Need waterproof glue and 60x60cm matte white wall tiles, better quality this time. For bathroom walls in Paris\",\n  \"region\": \"Île-de-France\",\n  \"project_type\": \"renovation\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/generate-proposal",
          "host": ["{{base_url}}"],
          "path": ["generate-proposal"]
        }
      },
      "response": []
